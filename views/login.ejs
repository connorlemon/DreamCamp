<% include ./partials/header %>

<div class="container star-container">
	<h1 class="header-text">Sign In</h1>
	<div class="row">
		<div class="form-container">
			<form action="/login" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="username" placeholder="Username">
			</div>
			<div class="form-group">
				<input class="form-control" type="password" name="password" placeholder="Password">
			</div>
				<button class="btn btn-lg btn-unique-2 btn-block">Submit</button>
			</form>
			<h3 class="subheader-text">
				Or
			</h3>
			<a class="btn btn-lg btn-unique-3 btn-block" href="/register">Register Here</a>
		</div>
	</div>
</div>


<% include ./partials/footer %>